<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScientifiqueActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/solution_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/result_tv"
            android:layout_margin="16dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/calculator_scroll_container"
            android:layout_margin="16dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="48sp" />


        <HorizontalScrollView
            android:id="@+id/calculator_scroll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scrollbars="horizontal"
            android:background="#F5F5DC"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_deg_rad"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="DEG"
                        android:textSize="8sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#8B4513"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_sin"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="sin"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#DEB887"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_cos"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="cos"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#DEB887"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_tan"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="tan"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#DEB887"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_ln"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="ln"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#D2B48C"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_log"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="log"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#D2B48C"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_c"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#FF7F50"
                        android:text="C"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_7"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="7"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_4"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="4"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_1"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_ac"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#FF7F50"
                        android:text="AC"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_sqrt"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="√"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#D2B48C"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_open_bracket"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#DEB887"
                        android:text="("
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_8"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="8"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_5"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="5"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_2"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="2"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_0"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_power"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="x^y"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#D2B48C"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_close_bracket"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#DEB887"
                        android:text=")"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_9"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="9"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_6"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="6"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_3"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#C0E0E8"
                        android:text="3"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_dot"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#DEB887"
                        android:text="."
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_pi"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="π"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#8B4513"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_devised"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#A0522D"
                        android:text="/"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_multiply"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#A0522D"
                        android:text="*"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_minus"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#A0522D"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_plus"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#A0522D"
                        android:text="+"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_equal"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="#FF7F50"
                        android:text="="
                        android:textColor="#000000"
                        android:textSize="28sp"
                        app:cornerRadius="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_e"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:text="e"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="16dp"
                        android:backgroundTint="#8B4513"/>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>